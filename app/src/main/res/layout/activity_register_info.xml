<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_reg_frame"
    tools:context=".register.RegisterActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/telex"
            android:text="Đăng kí"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/button_avatar_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:background="@color/no_color"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_apartment_login" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="25dp"
                android:text="Tên đăng nhập*"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_register_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="Ví dụ: nguoidung123"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="14dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Mật khẩu*"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_register_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="⋅⋅⋅⋅⋅⋅"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Xác nhận lại mật khẩu*"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_register_confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="⋅⋅⋅⋅⋅⋅"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="14dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Họ và tên*"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_register_firstname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="Họ"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edit_register_lastname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="Tên"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="14dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Giới tính*"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <RadioGroup
                android:id="@+id/rdGender"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/blue_app"
                    android:checked="true"
                    android:text="Nam"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:buttonTint="@color/blue_app"
                    android:checked="false"
                    android:text="Nữ"
                    android:textColor="@color/black" />
            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Ngày sinh"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/edit_register_birthday"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:gravity="left|center_vertical"
                android:hint="ngày/tháng/năm"
                android:paddingLeft="15dp"
                android:stateListAnimator="@null"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="14dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Email*"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_register_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="Ví dụ example@gmail.com"
                android:paddingLeft="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Số điện thoại"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_register_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="Số điện thoại 10-12 chữ số"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="14dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Nguyên quán*"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_register_country"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="Nguyên quán"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Nghề nghiệp"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_register_job"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="Ví dụ: Công nhân viên chức"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Quan hệ với chủ hộ*"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/spinner_relationship"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_frame"
                android:backgroundTint="@color/blue_hover"
                android:popupBackground="@color/gray_holder_login"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Số chứng minh thư/thẻ căn cước*"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_register_identity_card_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_frame"
                android:fontFamily="@font/telex"
                android:hint="Số chứng minh/thẻ căn cước"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_holder_login"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="left|center_horizontal"
                android:padding="20dp"
                android:text="@string/notice_register_1"
                android:textColor="@color/gray_holder_login" />

            <Button
                android:id="@+id/button_register_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/button_register_activity"
                android:fontFamily="@font/telex"
                android:onClick="clickToNextRegister"
                android:stateListAnimator="@null"
                android:text="Tiếp"
                android:textAllCaps="false"
                android:textColor="@color/blue_app" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>